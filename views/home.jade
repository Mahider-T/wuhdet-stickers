// home.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Sticker Collection
    style
      | .sticker-container {
      |   display: flex;
      |   justify-content: center;
      |   flex-wrap: wrap;
      |   gap: 40px;
      | }
  body
    h3 From Music 
    div.sticker-container
      each sticker in fromMusic
        div
          img(src=sticker.link, alt=sticker.name, style='width: 100px; height: 100px;')
          h2
            a(href=`/api/stickers/getStickerById/${sticker._id}`)= sticker.name
    div.sticker-container      
      a(href = `/api/stickers/getStickersByTag?tag=Music`)  See More >>
    
